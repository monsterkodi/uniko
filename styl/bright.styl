frameWidth  = 6px
frameColor  = #fff
bgColor     = #eee
frameBorder = frameWidth solid frameColor

body
    background          frameColor
    color               #333

.titlebar
    background          frameColor
    color               #888

.titlebar-dot
    color               #eee

.titlebar-version
    color               #ccc

#main
    border-left         frameBorder
    border-right        frameBorder
    border-bottom       frameBorder
    background          bgColor
    color               #333

pre
    background          #fff
    color               #666
        
