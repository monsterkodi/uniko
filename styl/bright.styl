.popup
    background-color    frameColor

.popupItem
    color               #888
    &:not(:last-child)
        border-bottom   1px solid frameColor
    &.selected
        color           #000
        & .popupCombo
            color       #aaa

.menuItem:active
.popupItem:active
    color               #000

.popupCombo
    color               #ddd
    
.popupItem.separator
