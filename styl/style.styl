.popup
    position            absolute
    border-radius       3px

.popupItem
    padding             2px
    padding-left        2 * frameWidth
    padding-right       2 * frameWidth + 70px
    cursor              pointer
    &:last-child
        padding-bottom  frameWidth
    &:first-child
        padding-top     frameWidth

.popupCombo
    position            absolute
    right               2 * frameWidth

.popupItem.separator
    padding             0
    cursor              default
    border              0
    height              0
    margin-top          2px
    margin-bottom       2px

.popupCombo
    pointer-events      none
    position            absolute
    right               2 * frameWidth
    
