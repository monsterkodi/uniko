*
    outline-width       0
    
body
    fill-abs()
    margin              0
    overflow            hidden
    font-family         fontMono
    font-size           14px
    -webkit-app-region  no-drag
    -webkit-user-select none
    
#main
    position            absolute
    top                 0
    bottom              0
    right               0
    left                0
    top                 titlebarHeight
    scroll              none
    overflow            hidden
    pointer-events      auto
    display             flex
    flex-direction      column
    
