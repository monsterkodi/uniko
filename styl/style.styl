#sheet
    margin              10px
    height              100%
    -webkit-user-select text
    overflow            auto
    cursor              text
    pointer-events      all

#sheet .group
    cursor              pointer
    font-family         fontUnicode
    -webkit-user-select none
    
.name span:not(:last-child)
    white-space         nowrap
    opacity             0.25
    
#sheet .text 
    cursor              text
    margin-left         120px
    -webkit-user-select text
    & span
        display         inline-block

    
    