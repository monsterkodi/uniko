.menu
    height              titlebarHeight
    pointer-events      auto
    -webkit-app-region  no-drag
    flex                1 1 0
    display             flex
    flex-direction      row
    
.menuItem
    -webkit-app-region  no-drag
    cursor              pointer
    padding-left        10px
    padding-right       10px
    padding-top         6px
    font-weight         bold
    display             inline-block
    height              titlebarHeight
    overflow            visible
            
