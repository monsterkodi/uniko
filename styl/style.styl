#input
    display             block
    min-height          80px
    margin              10px
    border-radius       10px
    overflow            hidden

.input-text 
    overflow            hidden
    position            absolute
    height              auto
    left                10px
    text-align          left
    padding-left        10px
    padding-right       10px
    -webkit-user-select text
    
.test-char
    display             inline-block
    font-size           6px
    font-family         fontUnicode
    color               #fff
    background-color    #000
    pointer-events      none
        
