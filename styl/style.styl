#sheet
    margin              10px
    height              100%
    -webkit-user-select text
    overflow            auto
    cursor              text
    pointer-events      all
    font-family         "Arial Unicode MS"

#sheet .sheet.text 
    margin-left         120px
    & span
        display         inline-block
    
#sheet .sheet.group
    cursor              pointer
    font-family         sans-serif
    -webkit-user-select none

